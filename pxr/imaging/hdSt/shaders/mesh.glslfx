// OsdPerPatchVertexBezier - used to trigger codegen

vec3 GetPosAtUv(vec2 uv, OsdPatchParam param, thread vec3 *cv) {
    //TODO THOR we really want an alternative to all the data being passed in here
    float wP[HD_NUM_PATCH_VERTS];
    float wDs[HD_NUM_PATCH_VERTS];
    float wDt[HD_NUM_PATCH_VERTS];
    float wDss[HD_NUM_PATCH_VERTS];
    float wDst[HD_NUM_PATCH_VERTS];
    float wDtt[HD_NUM_PATCH_VERTS];
    OsdEvaluatePatchBasisNormalized(OSD_PATCH_DESCRIPTOR_LOOP, param, uv.x, uv.y, &(wP[0]), &(wDs[0]), &(wDt[0]), &(wDss[0]), &(wDst[0]), &(wDtt[0]));

    vec3 pos = vec3(0.0, 0.0, 0.0);
    for (int i = 0; i < 12; i++) {
        pos += cv[i] * wP[i];
    }
    return pos;
}

vec4 GetPatchCoord(int index)
{
    vec2 uv[3];
    uv[0] = vec2(0, 0); // (0, 0, 1);
    uv[1] = vec2(1, 0); // (1, 0, 0);
    uv[2] = vec2(0, 1); // (0, 1, 0);

    ivec3 patchParam = GetPatchParam();
    return OsdInterpolatePatchCoordTriangle(uv[index], patchParam);
}


void main(void)
{
    ProcessPrimvarsIn();
    MAT4 transform = ApplyInstanceTransform(HdGet_transform());

    ivec3 patchParam = GetPatchParam();

    const vec3 corner0Uv = vec3(1.0, 0.0, 0.0);
    const vec3 corner1Uv = vec3(0.0, 1.0, 0.0);
    const vec3 corner2Uv = vec3(0.0, 0.0, 1.0);
    OsdPatchParam osdParam = OsdPatchParamInit(patchParam.x, patchParam.y, 0);
    vec3 corners[3];
    corners[0] = GetPosAtUv(corner0Uv.xy, osdParam, &(points[0]));
    corners[1] = GetPosAtUv(corner1Uv.xy, osdParam, &(points[0]));
    corners[2] = GetPosAtUv(corner2Uv.xy, osdParam, &(points[0]));
    vec3 midPoints[3];
    int transitionMask = OsdGetPatchTransitionMask(patchParam);
    midPoints[0] = ((transitionMask & 4) == 0) ? float3(0) : GetPosAtUv(((corner0Uv + corner1Uv)/2.0).xy, osdParam, &(points[0]));
    midPoints[1] = ((transitionMask & 1) == 0) ? float3(0) : GetPosAtUv(((corner1Uv + corner2Uv)/2.0).xy, osdParam, &(points[0]));
    midPoints[2] = ((transitionMask & 2) == 0) ? float3(0) : GetPosAtUv(((corner2Uv + corner0Uv)/2.0).xy, osdParam, &(points[0]));
    
    midPoints[0] = (GetWorldToViewMatrix() * transform * vec4(midPoints[0], 1.0)).xyz;
    midPoints[1] = (GetWorldToViewMatrix() * transform * vec4(midPoints[1], 1.0)).xyz;
    midPoints[2] = (GetWorldToViewMatrix() * transform * vec4(midPoints[2], 1.0)).xyz;

    corners[0] = (GetWorldToViewMatrix() * transform * vec4(corners[0], 1.0)).xyz;
    corners[1] = (GetWorldToViewMatrix() * transform * vec4(corners[1], 1.0)).xyz;
    corners[2] = (GetWorldToViewMatrix() * transform * vec4(corners[2], 1.0)).xyz;
    

    vec4 tessLevelOuter = vec4(0);
    vec2 tessLevelInner = vec2(0);
    vec4 tessOuterLo = vec4(0);
    vec4 tessOuterHi = vec4(0);
    Osd_GetTessLevelsFromPatchBoundaries3(
       renderPassState.tessLevel, GetProjectionMatrix(), mat4(1),
        corners, midPoints, patchParam, tessOuterLo, tessOuterHi);
    

    OsdComputeTessLevelsTriangle(tessOuterLo, tessOuterHi,
                         tessLevelOuter, tessLevelInner);

    device half* tessAsHalf = (device half*)tessFactors + patch_id * 6;

    half outer0 = clamp(half(tessLevelOuter[0]), 2.0h, 32.0h);
    half outer1 = clamp(half(tessLevelOuter[1]), 2.0h, 32.0h);
    half outer2 = clamp(half(tessLevelOuter[2]), 2.0h, 32.0h);
    half outer3 = clamp(half(tessLevelOuter[3]), 2.0h, 32.0h);

    half inner0 = clamp(half(tessLevelInner[0]), 2.0h, 32.0h);
    half inner1 = clamp(half(tessLevelInner[1]), 2.0h, 32.0h);

    tessAsHalf[0] = outer0;
    tessAsHalf[1] = outer1;
    tessAsHalf[2] = outer2;
    tessAsHalf[3] = outer3;

    tessAsHalf[4] = inner0;
    tessAsHalf[5] = inner1;
}

