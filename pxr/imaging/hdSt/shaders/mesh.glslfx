int GetDrawingField(uint off, uint drawCommandIndex)
{
    uint offset = drawCommandIndex * drawCommandNumUints;

    offset += off;

    return int(drawCullInput[offset]);return int(drawCullInput[offset]);
}

const int indexCountOffset = 0;
const int instanceCountOffset = 1;
const int baseIndexOffset = 2;
const int baseVertexOffset = 3;
const int baseInstanceOffset = 4;

void main(void)
{   
    //IDEAS Experimentally tune
    const uint32_t indicesPerMesh = MAX_INDICES;
    SetDrawIndex(hd_LocalInvocationID.x, 0);
    const uint indexCount = GetDrawingField(indexCountOffset, hd_LocalInvocationID.x);
    const uint numMeshlets = (indexCount + MAX_INDICES - 1) / MAX_INDICES;

    //TODO maybe remove this

    uint instanceCount = GetDrawingField(instanceCountOffset, hd_LocalInvocationID.x);
    uint baseIndex = GetDrawingField(baseIndexOffset, hd_LocalInvocationID.x);
    uint baseVertex = GetDrawingField(baseVertexOffset, hd_LocalInvocationID.x);
    uint baseInstance = GetDrawingField(baseInstanceOffset, hd_LocalInvocationID.x);

    //IDEA Maybe sorting the inputs?

    payload.baseVertex = baseVertex;
    payload.baseIndex = baseIndex;
    payload.baseInstance = baseInstance;
    payload.drawCommandIndexPayload = hd_LocalInvocationID.x;
    payload.drawCommandNumUintLocal = drawCommandNumUints;
    payload.indexCount = indexCount;

    // Because the mesh shader is only producing one mesh, the threadgroup grid size is 1 x 1 x 1.

    //IDEAS go in scan order
    meshGridProperties->set_threadgroups_per_grid(uint3(instanceCount, numMeshlets, 1));
}


