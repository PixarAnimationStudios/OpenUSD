// Fwd declare methods defined in pointId.glslfx, that are used below.
FORWARD_DECL(int GetPointId());
FORWARD_DECL(float GetPointRasterSize(int));
FORWARD_DECL(void ProcessPointId(int));
uint32_t hd_VertexID;
uint32_t primitive_id;
uint32_t gl_InstanceID;
uint32_t gl_BaseInstance;
uint32_t baseVertex;
uint32_t baseIndex;

half2 getScreenPos(float4 hPos)
{
  hPos /= hPos.w;
  return half2((hPos.xy * 0.5 + 0.5) * (renderPassState.viewport.zw - renderPassState.viewport.xy));
}

bool testTriangle(half2 a, half2 b, half2 c, half winding)
{
#if ENABLE_BACKFACE_CULLING
  // back face culling
  const half2 ab = b.xy - a.xy;
  const half2 ac = c.xy - a.xy;
  const half cross_product = ab.x * ac.y - ab.y * ac.x;

  //possibly needs reversal
  //cross_product = -cross_product;
  if (cross_product * winding < 0.0f) {return false;}
#endif

  return true;
}

uint getCullBits(vec4 hPos)
{
    uint cullBits = 0;
    cullBits |= hPos.x < -hPos.w ?  1 : 0;
    cullBits |= hPos.x >  hPos.w ?  2 : 0;
    cullBits |= hPos.y < -hPos.w ?  4 : 0;
    cullBits |= hPos.y >  hPos.w ?  8 : 0;
    //cullBits |= hPos.z < -hPos.w ? 16 : 0;
    cullBits |= hPos.z <  0.0f      ? 16 : 0;
    cullBits |= hPos.z >  hPos.w ? 32 : 0;
    cullBits |= hPos.w <= 0.0f      ? 64 : 0;
    return cullBits;
}
hd_drawingCoord dcMemb;
void main(void) {
    dcMemb = GetDrawingCoordFull();
    //can be simplified to always use payload.baseVertex
    const uint startIndex = MAX_INDICES * hd_LocalInvocationID.y;
    const uint endIndex   = min(startIndex + MAX_INDICES, payload.indexCount);
    uint drawIndexCount2 =  endIndex - startIndex;
    uint32_t inputPrimitiveCount = drawIndexCount2/3;
    if(drawIndexCount2 < 1) {
        return;
    }

    uint ind = startIndex + hd_LocalIndexID;

    uint globalIndex;

    if (ind < endIndex)
    {
        baseVertex = payload.baseVertex;
        baseIndex = payload.baseIndex;
        gl_BaseInstance = payload.baseInstance;
        gl_InstanceID = hd_LocalInvocationID.x + payload.baseInstance;

        SetDrawIndex(payload.drawCommandIndexPayload, hd_LocalInvocationID.x);
        primitive_id = (ind)/3;
        hd_VertexID = ind;

        uint totalIndOff = (ind % 3);

        uint usedBaseIndex = (baseIndex / 3);

        if (totalIndOff % 3 == 0) {
            globalIndex = (indices + (usedBaseIndex))[ind/3].x;
        } else if (totalIndOff % 3 == 1) {
            globalIndex = (indices + (usedBaseIndex))[ind/3].y;
        } else if (totalIndOff % 3 == 2) {
            globalIndex = (indices + (usedBaseIndex))[ind/3].z;
        } else {
        globalIndex = 0;
        }
    }
    else
    {
        globalIndex = INVALID_GLOBAL_INDEX;
    }

    optimizeIndexList(indexListOptimizerContext, ushort(hd_LocalIndexID), drawIndexCount2, globalIndex);

    if( hd_LocalIndexID < indexListOptimizerContext.numUniqueVertices )
    {
        uint index = indexListOptimizerContext.globalIndices[hd_LocalIndexID];
        ProcessPrimvarsIn(index);

        //this is problematic because of threads

        VertexOut vertexOut;
        float4 point = float4(HdGet_points(index).x, HdGet_points(index).y, HdGet_points(index).z, 1.0f);

        vec3 Neye0 = GetNormal(vec3(0),index);

        //point = DisplacementTerminal(0, point, Neye0, GetPatchCoord(0));
        MAT4 transform = ApplyInstanceTransform(HdGet_transform());
        vertexOut.Peye = vec4(GetWorldToViewMatrix() * transform * point);

        vertexOut.Neye = Neye0; // normalized

        vertexOut.position = vec4(GetProjectionMatrix() * vertexOut.Peye);
	vertexOut.drawIndexVS = payload.drawCommandIndexPayload;
        ProcessPrimvarsOut(vertexOut);
        mesh.set_vertex(hd_LocalIndexID, vertexOut);
        ApplyClipPlanes(vertexOut.Peye);

#if ENABLE_BACKFACE_CULLING == 1
        indexListOptimizerContext.positions[hd_LocalIndexID] = getScreenPos(vertexOut.position);
#endif
    }

    ThreadgroupBarrier();

    const uint simdId = hd_LocalIndexID / SIMD_WIDTH;
    if( simdId == 0 )
    {
        const uint baseIndex = hd_LocalIndexID * 3;

        const uchar localIndex0 = indexListOptimizerContext.localIndices[baseIndex+0];
        const uchar localIndex1 = indexListOptimizerContext.localIndices[baseIndex+1];
        const uchar localIndex2 = indexListOptimizerContext.localIndices[baseIndex+2];

#if ENABLE_BACKFACE_CULLING == 1
        const bool visible = testTriangle(
            indexListOptimizerContext.positions[localIndex0],
            indexListOptimizerContext.positions[localIndex1],
            indexListOptimizerContext.positions[localIndex2],
            1.0);

        const uint visiblePrimitivesThreadMask = (uint) (simd_vote::vote_t) simd_ballot(visible);
        const uint outputPrimitiveCount = popcount(visiblePrimitivesThreadMask);
#else
        const bool visible = true;
        const uint outputPrimitiveCount = inputPrimitiveCount;
#endif

        if( hd_LocalIndexID == 0 )
        {
            mesh.set_primitive_count(outputPrimitiveCount);
        }

        if( visible )
        {
#if ENABLE_BACKFACE_CULLING == 1
            const uint primitiveId = popcount(visiblePrimitivesThreadMask & ((1 << hd_LocalIndexID) - 1));
#else
            const uint primitiveId = hd_LocalIndexID;
#endif

            PrimOut primOut;
            mesh.set_primitive(primitiveId, primOut);

            // Set the output indices.
            const uint baseIndex = primitiveId * 3;
            mesh.set_index(baseIndex+0, localIndex0);
            mesh.set_index(baseIndex+1, localIndex1);
            mesh.set_index(baseIndex+2, localIndex2);
        }
    }
}


